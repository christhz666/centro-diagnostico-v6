# ===============================
# CENTRO DIAGNÓSTICO - NODE BACKEND
# ===============================

NODE_ENV=production
HOST=0.0.0.0
PORT=5000

# URL pública (opcional, para logs/health/info)
PUBLIC_API_URL=https://tu-dominio.com/api
FRONTEND_URL=https://tu-dominio.com

# Lista CORS permitida (separada por comas)
CORS_ORIGINS=https://tu-dominio.com,http://localhost:3000

# Seguridad
JWT_SECRET=CAMBIAR_ESTA_CLAVE_SUPER_SEGURA
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# MongoDB
MONGODB_URI=mongodb://127.0.0.1:27017/centro_diagnostico

# Rate limiting
RATE_LIMIT_MAX=10000
RATE_LIMIT_LOGIN_MAX=1000
