# ============================================
# CONFIGURACIÓN DEL SISTEMA
# ============================================

# Base de datos PostgreSQL
DATABASE_URL=postgresql://centro_user:tu_password_seguro@localhost:5432/centro_diagnostico

# Seguridad - Genera valores seguros con: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=cambiar_esto_con_valor_seguro_aleatorio_32_caracteres
JWT_SECRET_KEY=cambiar_esto_con_valor_seguro_aleatorio_32_caracteres

# Entorno
FLASK_ENV=production

# Puerto
FLASK_PORT=5000

# Rutas
UPLOAD_FOLDER=./uploads
RESULTADOS_FOLDER=./uploads/resultados
TEMP_FOLDER=./uploads/temp
EQUIPOS_EXPORT_PATH=./uploads/equipos

# Redis (opcional, para tareas asíncronas)
REDIS_URL=redis://localhost:6379/0

# Email (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-app-password

# Nube (opcional)
CLOUD_SYNC_ENABLED=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=centro-diagnostico-backup
AWS_REGION=us-east-1

# Facturación
ITBIS_RATE=0.18
NCF_VALIDATION_ENABLED=true
